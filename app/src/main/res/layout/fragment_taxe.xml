<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecf0f1"
    tools:context="weownit.io.autotaxcalculator.fragments.Taxe"
    android:id="@+id/taxeLayout"
    >

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vehicleType"
        android:textColor="@color/darkBlue"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:id="@+id/btnSelectTaxa"
        android:background="@drawable/simple_btn_pressed"
        android:layout_marginTop="52dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="15"
        android:text=""
        android:maxLength="5"
        android:gravity="center_horizontal"
        android:id="@+id/inserValue"
        android:layout_below="@+id/btnSelectTaxa"
        android:layout_marginTop="42dp"
        android:layout_alignLeft="@+id/btnSelectTaxa"
        android:layout_alignStart="@+id/btnSelectTaxa"
        android:layout_alignRight="@+id/btnSelectTaxa"
        android:layout_alignEnd="@+id/btnSelectTaxa" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnCalcVam"
        android:background="@drawable/simple_btn_pressed"
        android:textColor="@color/darkBlue"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:id="@+id/btnCalcTaxa"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/taxa"
        android:id="@+id/textView"
        android:textSize="20sp"
        android:textColor="@color/darkBlue"
        android:layout_below="@+id/btnCalcTaxa"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0 MDL"
        android:textColor="@color/darkBlue"
        android:id="@+id/txtResultTaxa"
        android:layout_marginTop="10dp"
        android:textSize="35sp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
